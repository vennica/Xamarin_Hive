<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 x:Class="HIVE.WalletPage"
             xmlns:local="clr-namespace:HIVE"
			 Title="My Wallet"
             NavigationPage.HasBackButton="True"
             NavigationPage.HasNavigationBar="True">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Home" Clicked="OnBackToHomeButtonClicked" Priority="1" />
        <ToolbarItem Icon="hive_menu_backward.gif" Priority="0"/>
    </ContentPage.ToolbarItems>
    <Grid x:Name="PaymentGrid" BackgroundColor="White" RowSpacing ="0" ColumnSpacing ="0" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackLayout Grid.Row="0" Grid.Column="0">
            <Button Grid.Row="0" Grid.Column="0" BackgroundColor="White" BorderRadius="0" Image="ic_scan_meitu_1.png" BorderColor="Transparent" VerticalOptions="CenterAndExpand"/>
        </StackLayout>
        <StackLayout Grid.Row="0" Grid.Column="1">
            <Button Grid.Row="0" Grid.Column="1" BorderRadius="0" VerticalOptions="CenterAndExpand" BackgroundColor="White" Image="ic_pay_meitu_1.jpg" BorderColor="Transparent"/>
        </StackLayout>
        <StackLayout Grid.Row="0" Grid.Column="2">
            <Button VerticalOptions="CenterAndExpand" Grid.Row="0" Grid.Column="2" BorderRadius="0"  BackgroundColor="White" Image="ic_card__meitu_2.png" BorderColor="Transparent"/>
        </StackLayout>
            <!--
            <Label Text="Scan" Grid.Row="1" Grid.Column="0" TextColor="Orange" FontAttributes="Bold" FontSize="Large" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
            -->
        <StackLayout Grid.Row="1" Grid.Column="0">
            <Label Text="Balance" Grid.Row="2" Grid.Column="0" VerticalOptions="Start" FontAttributes="Bold" FontSize="Large" HorizontalOptions="CenterAndExpand"/>
        </StackLayout>
        <StackLayout Grid.Row="1" Grid.Column="2">
            <Label Text="$600.00" Grid.Row="2" Grid.Column="2" VerticalOptions="Start" FontAttributes="Bold" FontSize="Large" HorizontalOptions="CenterAndExpand"/>
        </StackLayout>
        
    </Grid>

    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="listView" ItemTapped="OncategorySelected">
                <ListView.ItemsSource>
                    <x:Array Type="{x:Type local:MenuItems}">
                        <local:MenuItems Title="History Transaction" TargetType="{x:Type local:HistoryPage}"/>
                        <local:MenuItems Title="Top Up" TargetType="{x:Type local:TopUpPage}"/>
                        <local:MenuItems Title="Withdraw" TargetType="{x:Type local:WithdrawPage}"/>

                    </x:Array>
                </ListView.ItemsSource>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid Padding="5,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="1" Text="{Binding Title}" TextColor="Black" />
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
